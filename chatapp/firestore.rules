rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // チャットメッセージの読み書きを許可
    match /messages/{messageId} {
      allow read, write: if true;
    }
    
    // 画像メタデータの読み書きを許可
    match /images/{imageId} {
      allow read, write: if true;
    }
    
    // ユーザー情報の読み書きを許可
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // その他のドキュメントはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}